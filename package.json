{
  "name": "purescript-jelly",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "watch-browser:tsc": "tsc -w --preserveWatchOutput",
    "watch-browser:spago": "npx spago bundle-app --main Test.EntryPoints.Browser --to public/index.js --watch",
    "watch-browser": "npm-run-all -p watch-browser:*",
    "bundle-browser:tsc": "tsc",
    "bundle-browser:spago": "npx spago bundle-app --main Test.EntryPoints.Browser --to public/index.js",
    "bundle-browser": "npm-run-all bundle-browser:*",
    "run-node:tsc": "tsc --preserveWatchOutput",
    "run-node:spago": "npx spago run --main Test.EntryPoints.NodeJS",
    "run-node": "npm-run-all run-node:*",
    "bundle": "npm-run-all run-node bundle-browser",
    "precommit": "npx purs-tidy format-in-place src/**/*.purs test/**/*.purs && tsc && npx spago build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "pulp": "^16.0.2",
    "purescript": "^0.15.4",
    "purs": "^0.3.0",
    "purs-tidy": "^0.9.1",
    "spago": "^0.20.9"
  },
  "author": "yukikurage",
  "license": "MIT",
  "description": "",
  "type": "module",
  "dependencies": {
    "esbuild": "^0.15.7",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.8.3"
  }
}
